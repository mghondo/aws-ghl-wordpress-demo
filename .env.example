# AWS S3 Configuration for Clarity WordPress Theme
# Copy this file to .env and fill in your actual AWS credentials

# AWS S3 Settings
AWS_S3_BUCKET_NAME=clarity-aws-ghl-demo-storage
AWS_S3_REGION=us-east-1
AWS_S3_ACCESS_KEY_ID=your_access_key_here
AWS_S3_SECRET_ACCESS_KEY=your_secret_key_here

# S3 Configuration Options
AWS_S3_DELETE_LOCAL_FILES=false
AWS_S3_UPLOAD_PATH=uploads/

# GoHighLevel Configuration (for future use)
GHL_API_KEY=your_ghl_api_key_here
GHL_WEBHOOK_SECRET=your_webhook_secret_here

# WordPress Database Configuration (if needed)
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_HOST=localhost

# Security Keys (generate new ones for production)
WP_DEBUG=false
WP_DEBUG_LOG=false